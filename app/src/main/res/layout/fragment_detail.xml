<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.DetailFragment">
        <ImageView
            android:id="@+id/ivItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_details_black_24dp"
            android:minHeight="200dp"/>
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Title"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:layout_below="@+id/ivItem"
            tools:text="name"/>
        <TextView
            android:id="@+id/tvPurpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:layout_below="@+id/tvName"
            tools:text="Purpose"/>
        <TextView
            android:id="@+id/tvTemprament"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:layout_below="@+id/tvPurpose"
            tools:text="Purpose"/>
        <TextView
            android:id="@+id/tvLifeSpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:layout_below="@+id/tvTemprament"
            tools:text="Purpose"/>
    </RelativeLayout>
</layout>
